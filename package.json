{
    "name": "nuxt-app",
    "private": true,
    "type": "module",
    "scripts": {
        "oas:dev": "nodemon --watch './api-spec/**/*.yaml' --exec 'pnpm oas:build &&  pnpm scalar serve ./public/oas.yaml -p 5001' --ext yaml",
        "oas:build": "redocly bundle api-spec/index.yaml -o public/oas.yaml --ext yaml",
        "oas:lint": "redocly lint ./api-spec/index.yaml",
        "nuxt:build": "nuxt generate",
        "nuxt:dev": "nuxt dev",
        "nuxt:preview": "pnpm dlx serve .output/public -p 3000",
        "nuxt:typecheck": "nuxt typecheck",
        "eslint:lint": "eslint .",
        "eslint:fix": "eslint . --fix",
        "build": "pnpm oas:build && pnpm nuxt:build",
        "dev": "pnpm oas:build && pnpm nuxt:dev",
        "preview": "pnpm build && pnpm nuxt:preview",
        "lint": "pnpm eslint:lint && pnpm oas:lint",
        "typecheck": "pnpm nuxt:typecheck",
        "fix": "pnpm eslint:fix",
        "postinstall": "nuxt prepare"
    },
    "dependencies": {
        "@directus/format-title": "^11.0.0",
        "@directus/sdk": "^17.0.2",
        "@iconify-json/material-symbols": "^1.2.4",
        "@inkeep/uikit": "^0.3.12",
        "@inkeep/uikit-js": "^0.3.12",
        "@nuxt/content": "^2.13.2",
        "@nuxt/eslint": "^0.6.0",
        "@nuxt/icon": "^1.5.6",
        "@nuxt/image": "^1.8.1",
        "@nuxtjs/color-mode": "^3.5.1",
        "@nuxtjs/seo": "2.0.0-rc.23",
        "@scalar/api-reference": "^1.25.37",
        "@vueuse/core": "^11.1.0",
        "@vueuse/nuxt": "^11.1.0",
        "confbox": "^0.1.8",
        "consola": "^3.2.3",
        "nuxt": "^3.13.2",
        "nuxt-posthog": "^1.5.4",
        "nuxt-security": "2.0.0",
        "radix-vue": "^1.9.7",
        "ufo": "^1.5.4",
        "vue": "^3.5.12",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@redocly/cli": "^1.25.6",
        "@scalar/cli": "^0.2.220",
        "nodemon": "^3.1.7",
        "sass": "^1.77.8",
        "typescript": "5.5.4",
        "vue-tsc": "^2.1.6"
    },
    "packageManager": "pnpm@9.12.1",
    "engines": {
        "node": ">=20.17.0",
        "pnpm": ">=9.12.1"
    }
}
