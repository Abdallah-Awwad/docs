{
    "name": "nuxt-app",
    "private": true,
    "type": "module",
    "scripts": {
        "oas:dev": "nodemon --watch './api-spec/**/*.yaml' --exec 'pnpm oas:build &&  pnpm scalar serve ./public/oas.yaml -p 5001' --ext yaml",
        "oas:build": "redocly bundle ./api-spec/index.yaml -o ./public/oas.yaml --ext yaml",
        "oas:lint": "redocly lint ./api-spec/index.yaml",
        "nuxt:build": "nuxt generate",
        "nuxt:dev": "nuxt dev",
        "nuxt:preview": "pnpm dlx serve .output/public -p 3000",
        "nuxt:typecheck": "nuxt typecheck",
        "eslint:lint": "eslint .",
        "eslint:fix": "eslint . --fix",
        "build": "pnpm oas:build && pnpm nuxt:build",
        "dev": "pnpm oas:build && pnpm nuxt:dev",
        "preview": "pnpm build && pnpm nuxt:preview",
        "lint": "pnpm eslint:lint && pnpm oas:lint",
        "typecheck": "pnpm nuxt:typecheck",
        "fix": "pnpm eslint:fix",
        "postinstall": "nuxt prepare"
    },
    "dependencies": {
        "@directus/format-title": "^11.0.0",
        "@directus/sdk": "^17.0.0",
        "@iconify-json/material-symbols": "^1.1.88",
        "@inkeep/uikit": "^0.3.10",
        "@inkeep/uikit-js": "^0.3.10",
        "@nuxt/content": "^2.13.2",
        "@nuxt/eslint": "^0.5.2",
        "@nuxt/icon": "^1.4.8",
        "@nuxt/image": "^1.7.0",
        "@nuxtjs/color-mode": "^3.5.1",
        "@nuxtjs/seo": "2.0.0-rc.19",
        "@scalar/api-reference": "^1.25.10",
        "@vueuse/core": "^11.0.1",
        "@vueuse/nuxt": "^11.0.1",
        "confbox": "^0.1.7",
        "nuxt": "^3.12.4",
        "nuxt-security": "2.0.0-rc.9",
        "radix-vue": "^1.9.4",
        "ufo": "^1.5.4",
        "vue": "latest"
    },
    "devDependencies": {
        "@redocly/cli": "^1.25.3",
        "@scalar/cli": "^0.2.194",
        "nodemon": "^3.1.4",
        "sass": "^1.77.8",
        "typescript": "^5.5.4",
        "vue-tsc": "^2.0.29"
    },
    "packageManager": "pnpm@9.10.0",
    "engines": {
        "node": ">=20.17.0",
        "pnpm": ">=9.10.0"
    }
}
